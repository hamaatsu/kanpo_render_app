{
  "title": "AI漢方・問診票（チェック式）",
  "sections": [
    {
      "title": "顧客情報",
      "questions": [
        { "id": "name", "label": "氏名（任意）", "type": "text", "placeholder": "例：山田 太郎" },
        { "id": "age", "label": "年齢", "type": "number", "placeholder": "例：45" },
        { "id": "gender", "label": "性別", "type": "select", "options": ["男性","女性","その他","無回答"] },
        { "id": "region", "label": "地域（任意）", "type": "text", "placeholder": "例：東京" }
      ]
    },
    {
      "title": "主訴",
      "questions": [
        { "id": "chief_complaint", "label": "今一番つらい症状（主訴）", "type": "textarea", "placeholder": "例：胃のむかつき、ゲップが多い。雨の日に悪化する など" }
      ]
    },

    /* ===== 八綱（チェック式：UIは複数可、AIには単一ラベルに集計） ===== */
    {
      "title": "八綱（チェック式）",
      "questions": [
        {
          "id": "kyojitsu_signs",
          "label": "虚・実の兆候（当てはまるもの全て）",
          "type": "checkboxes",
          "options": [
            "疲れやすい/だるい",
            "声が小さい",
            "息切れしやすい",
            "食欲がない",
            "冷えやすい",
            "いらいら/怒りっぽい",
            "痛みが強い/局所的",
            "体力はある",
            "便秘がち",
            "舌苔が厚い"
          ]
        },
        {
          "id": "kanetsu_signs",
          "label": "寒・熱の兆候（当てはまるもの全て）",
          "type": "checkboxes",
          "options": [
            "冷えると悪化",
            "温めると楽",
            "冷たい飲食を好む",
            "顔が赤い/ほてる",
            "喉が渇く",
            "発汗多い/口渇"
          ]
        },
        {
          "id": "hyori_signs",
          "label": "表・裏の兆候（当てはまるもの全て）",
          "type": "checkboxes",
          "options": [
            "悪寒/発熱/頭痛（かぜ様）",
            "首肩こり",
            "表在の痛み",
            "腹部症状が主",
            "慢性/深部の不調",
            "冷えが下腹にある"
          ]
        }
      ]
    },

    /* ===== 気血水（チェック式：代表パターンを自動決定） ===== */
    {
      "title": "気・血・水（チェック式）",
      "questions": [
        {
          "id": "qixu_signs",
          "label": "気虚の兆候",
          "type": "checkboxes",
          "options": ["疲れやすい","息切れ","自汗","声が小さい","食欲低下"]
        },
        {
          "id": "qitai_signs",
          "label": "気滞の兆候",
          "type": "checkboxes",
          "options": ["張った痛み/ガス/ゲップ","ため息","胸脇がつかえる","情緒の波","月経前症状"]
        },
        {
          "id": "oketsu_signs",
          "label": "瘀血の兆候",
          "type": "checkboxes",
          "options": ["刺すような痛み/固定痛","皮膚が暗い/アザ","月経血に塊","唇/舌が暗い"]
        },
        {
          "id": "kekkyos_signs",
          "label": "血虚の兆候",
          "type": "checkboxes",
          "options": ["めまい/動悸","顔色蒼白","乾燥/爪が割れやすい","不眠/健忘"]
        },
        {
          "id": "suitai_signs",
          "label": "水滞の兆候",
          "type": "checkboxes",
          "options": ["むくみ","めまい/重だるい","痰/鼻水","雨天で悪化"]
        },
        {
          "id": "inkyo_signs",
          "label": "陰虚の兆候",
          "type": "checkboxes",
          "options": ["午後〜夜間のほてり","口渇","寝汗","乾燥/便秘","舌が赤く苔少ない"]
        }
      ]
    },

    /* ===== 脈・顔・舌・生活（既存のselect/textareaでOK） ===== */
    {
      "title": "脈の状態",
      "questions": [
        { "id": "pulse_rate", "label": "脈の速さ", "type": "select", "options": ["遅い","普通","速い","不明"] },
        { "id": "pulse_strength", "label": "脈の強さ", "type": "select", "options": ["弱い","普通","強い","不明"] }
      ]
    },
    {
      "title": "顔の状態",
      "questions": [
        { "id": "face_state", "label": "顔色・むくみ・ほてりなど", "type": "textarea", "placeholder": "例：顔色が青白い／赤みが強い／むくみがある など" }
      ]
    },
    {
      "title": "舌の状態",
      "questions": [
        { "id": "tongue_color", "label": "舌の色", "type": "select", "options": ["淡","紅","暗紅","紫","不明"] },
        { "id": "tongue_coat", "label": "舌苔", "type": "select", "options": ["なし","薄い","厚い","黄","白","乾燥","不明"] },
        { "id": "tongue_shape", "label": "舌の形", "type": "select", "options": ["歯痕","腫大","瘦薄","亀裂","正常","不明"] },
        { "id": "tongue_moist", "label": "潤い", "type": "select", "options": ["乾燥","やや乾燥","普通","湿潤","不明"] }
      ]
    },
    {
      "title": "生活習慣",
      "questions": [
        { "id": "sleep", "label": "睡眠の状態", "type": "select", "options": ["良い","やや不調","不調","不明"] },
        { "id": "appetite", "label": "食欲", "type": "select", "options": ["良い","普通","やや低下","低下","不明"] },
        { "id": "bowel", "label": "排便", "type": "select", "options": ["1日1回前後","便秘傾向","下痢傾向","不定","不明"] },
        { "id": "sweat", "label": "発汗", "type": "select", "options": ["少ない","普通","多い","夜間多い","不明"] },
        { "id": "stress", "label": "ストレス", "type": "select", "options": ["低い","普通","高い","非常に高い","不明"] }
      ]
    }
  ]
}
